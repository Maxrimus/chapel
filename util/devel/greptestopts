#!/usr/bin/env bash

if [ ! -z "$CHPL_HOME" ] ; then
    chapelDir="$CHPL_HOME"
else
    chapelDir="./"
fi

pushd $chapelDir > /dev/null

find test -wholename "*/.svn" -prune -o \( -name \*.compopts -o -name COMPOPTS -o -name \*.execopts  -o -name EXECOPTS -o -name \*.perfcompopts -o -name PERFCOMPOPTS -o -name \*.perfexecopts -o -name PERFEXECOPTS \) -print0 | xargs -0 grep -H "$@"

popd > /dev/null
